name: ets-r

target: disease_cases

adapters: {'target': 'disease_cases'}

docker_env:
  image: ets-r:latest

entry_points:
  train:
    parameters:
      train_data: path
      model: path
    command: "Rscript train.R {train_data} {model}"
  predict:
    parameters:
      historic_data: path
      future_data: path
      model: str
      out_file: path
    command: "Rscript predict.R {model} {historic_data} {future_data} {out_file}"